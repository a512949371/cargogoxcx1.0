}
.detail-box{
  width: 100%;
}
.list-pic{
  width: 750rpx;
  height: 500rpx;
}
.detail-box .car-pic{
  position: relative
}
.detail-box .car-pic .pic-num{
  position: absolute;
  left: 10rpx;
  bottom: 10rpx;
  color: #666;
  font-size: 24rpx;
}
.detail-box .car-pic image{
  width: 750rpx;
  height: 500rpx;
}
.detail-box .car-info-box{
  padding: 40rpx 20rpx;
}
.detail-box .car-info-box .name{
  font-size: 36rpx;
  color: #141414;
  font-weight: bold;
}
.detail-box .car-info-box .desc{
  font-size: 24rpx;
  color: #969696;
  flex-wrap: wrap;
}
.detail-box .car-info-box .desc .tip{
  padding: 3rpx 5rpx;
  background-color: #f0f0f0;
  color: #969696;
  font-size: 24rpx;
}
.detail-box .car-info-box .price-box{
  font-size: 32rpx;
  color: #FF4633;
}
.detail-box .car-info-box .price-box .maxfont{
  font-size: 40rpx;
}
.detail-box .car-info-box .price-box .dec{
  font-size: 24rpx;
  color: #969696;
}
.detail-box .car-info-box .price-box .red{
  color: #FF4633;
}
.bor-box{
  border-top: 20rpx solid #e5e5e5;
}
.tab-box{
  text-align: center;
  font-size: 30rpx;
  color: #141414;
}
.tab-box .tab-tit{
  padding: 30rpx 0 0 20rpx ;
  font-size: 30rpx;
  color: #141414;
  text-align: left
}
.tab-box .tab-left{
  flex: 1;
  padding: 20rpx 0;
}
.tab-box .tab-left.active{
  color: #969696;
  background: url("http://cargogo.txw18.com/cgg_bg_05.png") center center no-repeat;
  background-size: 100%;
}
.tab-box .tab-right{
  flex: 1;
  padding: 20rpx 0;
}
.tab-box .tab-right.active{
  color: #969696;
  background: url("http://cargogo.txw18.com/cgg_bg_06.png") center center no-repeat;
  background-size: 100%;
}
.stage-par-box{
  padding: 30rpx 20rpx;
}
.stage-par-box .stage-par{
  background-color: #F5F5F5;
  padding: 20rpx 0;
  padding-left: 40rpx;
  flex: 1;
  text-align: left;
}
.stage-par-box .stage-par .desc{
  font-size: 24rpx;
  color: #646464;
}
.stage-par-box .stage-par .price{
  font-size: 36rpx;
  color: #FF4633
}
.calculator-box{
  padding: 0 20rpx;
  font-size: 22rpx;
  color: #646464
}
.calculator-box .calculator{
  padding: 16rpx 30rpx;
  width: 120rpx;
  border: 1px solid #e5e5e5;
  font-size: 26rpx;
  color: #969696;
}
.calculator-box  image{
  width: 27rpx;
  height: 21rpx;
}
.car-parm-name-box image{
  width: 8rpx;
  height: 19rpx;
}
.car-parm-name-box .car-parm-name{
  font-size: 36rpx;
  color: #646464;
  padding: 0 30rpx;
}
.car-parm-list-box{
  padding: 0 20rpx;
}
.car-parm-list-box .car-parm-list{
  padding: 20rpx 0;
  border-bottom: 1px solid #e5e5e5;
}
.car-parm-list-box .car-parm-list .left{
  font-size: 26rpx;
  color: #646464;
  flex: 1
}
.car-parm-list-box .car-parm-list .right{
  font-size: 26rpx;
  color: #141414;
}
.more-parm-box .more-parm{
  width: 50%;
  padding: 15rpx 0;
  text-align: center;
  font-size: 26rpx;
  color: #646464;
  border: 1px solid #e5e5e5;
}
.map-box{
  padding: 20rpx;
}
.map-box .map-name{
  font-size: 30rpx;
  color: #141414
}
.map-box .map-desc{
  font-size: 26rpx;
  color: #646464;
}
.buy-rule-box{
  padding: 0 20rpx;
}
.buy-rule-box .buy-rule{
  padding: 20rpx 0;
  border-bottom: 1px solid #e5e5e5;
}
.buy-rule-box .buy-rule .left{
  flex: 2;
  font-size: 26rpx;
  color: #646464;
}
.buy-rule-box .buy-rule .right{
  flex: 3;
  font-size: 26rpx;
  color: #141414;
}
.seat-box{
  width: 100%;
  height: 100rpx;
}
.fixed-box{
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: #FFF;
  box-shadow: -5rpx -5rpx 5rpx #e5e5e5;
  z-index: 99
}
.fixed-box .content-box{
  width: 100%;
}
.fixed-box .content-box .left{
  flex: 1;
  font-size: 22rpx;
  color: #646464
}
.fixed-box .content-box .left .box{
  flex: 1;
  text-align: center;
  position: relative
}
.fixed-box .content-box .left .box .tag{
  position: absolute;
  top: 0;
  right: 30%;
  width: 20rpx;
  height: 20rpx;
  border-radius: 20rpx;
  background-color: #f00;
  color: #fff;
  font-size: 20rpx;
}
.fixed-box .content-box .left .box image{
  width: 38rpx;
  height: 36rpx;
}
.fixed-box .content-box .left .box .name{
  font-size: 22rpx;
  color: #787878;
}
.fixed-box .content-box .right{
  flex: 1;
  font-size: 36rpx;
  color: #3D2619;
  padding: 20rpx 0;
  text-align: center;
  background: url("http://cargogo.txw18.com/cgg_btn_jrck.png") center center no-repeat;
  background-size: 100%;
}
.fixed-box .content-box .right.active{
  background: #e5e5e5;
}
.fixed{
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 9999
}
.fixed .shaw{
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 10000;
  background-color: rgba(0, 0, 0, 0.5)
}
.fixed .content{
  width:100px;
  height:100px;
  position: fixed;
  top:calc(50% - 50px);
  left:calc(50% - 50px);
  z-index: 10001;
  border-radius: 8px;
  background-color: rgba(0, 0, 0, 0.5)
}
.fixed .text-box{
  width:100px;
  height:100px;
  position: fixed;
  top:calc(50% - 30px);
  left:calc(50% - 50px);
  z-index: 10002;
  text-align: center;
}
.fixed .text-box image{
  width: 40px;
  height: 40px;
  display: inline-block;
}
.fixed .text-box .desc{
  font-size: 28rpx;
  color: #FFF;
}