/* pages/personal/personalInfo/personalInfo.wxss */

.info-body {
  display: flex;
  flex-direction: column;
}

.info {
  display: flex;
  align-items: center;
  padding-top: 30rpx;
  padding-bottom: 30rpx;
  border-bottom: rgba(245, 245, 245, 1) 2rpx solid;
  margin-left: 30rpx;
  font-size: 32rpx;
}

.info .tInfoLine {
  color: rgba(100, 100, 100, 1);
}

.inputInfoLine {
  flex: 1;
  text-align: right;
  margin-right: 30rpx;
}

.pic-box {
  display: flex;
  flex-direction: column;
  width: 100%;
}

.pic-box .pic-title-line {
  display: flex;
  align-items: center;
  width: 100%;
  font-size: 32rpx;
  margin-top: 40rpx;
}

.pic-box .btn{
  color:rgba(27,172,255,1);
  flex: 1;
  text-align: right;
  margin-right: 30rpx;
}

.pic-box .tPicTitle {
  margin-left: 30rpx;
  color: rgba(100, 100, 100, 1);
}

.pic-box .iconBtn-box {
  display: flex;
  width: 690rpx;
  margin: 30rpx;
}

.pic-box .line{
  width: 720rpx;
  margin-left: 30rpx;
  height: 2rpx;
  background: rgba(245, 245, 245, 1);
  margin-top: 30rpx;
}

.iconBtn-box .iconBtn {
  width: 210rpx;
  height: 150rpx;
  background: rgba(250, 250, 250, 1);
  border: 1rpx dashed rgba(150, 150, 150, 1);
  border-radius: 15rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-right: 30rpx;
}

.iconBtn .iIconBtn {
  width: 60rpx;
  height: 60rpx;
  margin-top: 27rpx;
}

.iconBtn .tIconBtn {
  font-size: 30rpx;
  color: rgba(100, 100, 100, 1);
  margin-top: 20rpx;
}

.saveBtn {
  width: 100%;
  height: 98rpx;
  background: url('http://cargogo.txw18.com/cgg_btn_jrck.png');
  position: fixed;
  bottom: 0;
  font-size: 42rpx;
  font-weight: bold;
  color: rgba(61, 38, 25, 1);
  display: flex;
  align-items: center;
  justify-content: center;
}
