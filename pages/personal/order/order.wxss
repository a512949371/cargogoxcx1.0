/* pages/personal/order/order.wxss */

.list-item {
  display: flex;
  align-items: center;
  background: #fff;
  margin-bottom: 20rpx;
  flex-direction: column;
}

.item-top {
  width: 100%;
  display: flex;
  align-items: center;
  padding-top: 40rpx;
  padding-bottom: 40rpx;
  background: #fff;
}

.item-top .tOrderNo {
  font-size: 30rpx;
  font-weight: bold;
  color: rgba(20, 20, 20, 1);
  margin-left: 30rpx;
}

.item-top .tStatus {
  font-size: 30rpx;
  color: rgba(120, 120, 120, 1);
  position: absolute;
  right: 30rpx;
}

.list-item .car-list {
  background: rgba(245, 245, 245, 1);
  width: 720rpx;
  margin-left: 30rpx;
  padding-top: 2rpx;
}

.car-item {
  width: 700rpx;
  display: flex;
  align-items: center;
  background: #fff;
  margin-bottom: 2rpx;
  padding: 10rpx;
}

.car-item .info {
  display: flex;
  flex: 1;
  flex-direction: column;
  margin-left: 42rpx;
  
}

.info .tCarName {
  font-size: 36rpx;
  font-weight: bold;
  font-family: PingFangSC-Regular;
  color: rgba(20, 20, 20, 1);
}

.info .tPrices {
  font-size: 36rpx;
  font-family: PingFangSC-Medium;
  font-weight: 500;
  color: rgba(255, 77, 48, 1);
}

.info .tName {
  font-size: 27rpx;
  color: rgba(100, 100, 100, 1);
}

.info .tNum {
  position: absolute;
  right: 30rpx;
  font-size: 27rpx;
  color: rgba(100, 100, 100, 1);
}

.info .tTime {
  font-size: 26rpx;
  color: rgba(150, 150, 150, 1);
  margin-top: 42rpx;
}

.item-foot {
  background: #fff;
  display: flex;
  width: 100%;
  align-items: center;
  padding-top: 30rpx;
  padding-bottom: 30rpx;
  margin-top: 2rpx;
}

.item-foot .tAgent {
  font-size: 30rpx;
  color: rgba(150, 150, 150, 1);
  margin-left: 30rpx;
}

.item-foot .foot-right {
  display: flex;
  align-items: center;
  position: absolute;
  right: 30rpx;
}

.foot-right .tSumNum {
  font-size: 30rpx;
  color: rgba(150, 150, 150, 1);
  margin-right: 30rpx;
}

.foot-right .tTag{
  font-size: 30rpx;
  color:rgba(100,100,100,1);
}

.foot-right .tSumPrices{
  font-size: 30rpx;
  color: rgba(255, 77, 48, 1);
}
.noorder{
  position: absolute;
  left: calc(50% - 165rpx);
  top: 30%;
  text-align: center
}
.noorder .img image{
  width: 331rpx;
  height: 298rpx;
}
.noorder .desc{
  font-size: 32rpx;
  color: #c8c8c8;
}
.noorder .blue{
  color: rgb(35, 101, 243);
  text-decoration:underline;
  padding: 0 10rpx;
}
